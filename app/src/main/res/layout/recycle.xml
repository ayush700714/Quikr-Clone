<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="8dp"
    android:backgroundTint="#EEEEEE"
    app:cardElevation="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="New Year Party"
            android:textColor="@color/black_25303c"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/category"
            android:layout_toRightOf="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Event"
            android:textColor="@color/red_ff577f"
            android:fontFamily="@font/sf_pro_display_semibold_italic"
            android:paddingLeft="6dp"
            android:paddingTop="22dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1 Hour Ago"
            android:textColor="@color/black"
            android:paddingTop="16dp"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />
        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Swaminathan"
            android:textColor="#2196F3"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/name"
            android:paddingTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tools:src="@drawable/ic_baseline_add_a_photo_24" />
        <TextView
            android:id="@+id/desc"
            android:layout_below="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            tools:text="There is a fire in Lift of A block."
            android:textColor="@color/black_25303c"
            android:fontFamily="@font/sf_pro_display_regular"
            android:paddingTop="8dp"
            android:paddingLeft="12dp"
            android:textSize="16sp"
            tools:ignore="RtlSymmetry" />
        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_comment_24"
            android:layout_below="@id/desc"
            android:layout_marginLeft="12dp"

            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>